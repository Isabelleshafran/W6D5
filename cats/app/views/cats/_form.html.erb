<% if type == 'new' %>
    <% action_url = cats_url %>
    <% submit_text = 'create cat' %>
<% else %>
    <% action_url = cat_url(cat) %>
    <% submit_text = 'edit cat' %>
<% end %>

<form action="<%= action_url %>" method="POST">
    <% if type == 'edit' %>  
        <input type="hidden" name="_method" value="PATCH">
    <% end %>
    <label>Name: 
        <input type="text" name="cat[name]" value="<%= cat.name %> ">
    </label><br>
    <label>Sex: 
        <input type="radio" name="cat[sex]" value="M" id="male" <%= cat.sex == "M" ? "checked" : "" %>>
        <label for="male">Male</label>
        <input type="radio" name="cat[sex]" value="F" id="female" <%= cat.sex == "F" ? "checked" : "" %>>
        <label for="female">Female</label><br>
    </label>
    <label>Color:</label>
        <select name="cat[color]" id="colors">
            <option disabled <%= cat.color ? "" : "selected"%>>--Please Select--</option>
            <option value="White" <%= cat.color == "White" ? "selected" : "" %> >White</option>
            <option value="Tabby" <%= cat.color == "Tabby" ? "selected" : "" %> >Tabby</option>
            <option value="Orange" <%= cat.color == "Orange" ? "selected" : "" %> >Orange</option>
            <option value="Brown" <%= cat.color == "Brown" ? "selected" : "" %> >Brown</option>
        </select>
    
    <label>Date: 
        <input type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">
    </label> <br>
    <label>Description:
        <textarea name="cat[description]"><%= cat.description %></textarea>
    </label>

    <input type="submit" value="<%= submit_text %>">

</form>

